{
  "scripts": {
    "build:pug": "ts-node build.ts",
    "build:tsc": "(cd src/scripts && tsc)",
    "tsc:watch": "(cd src/scripts && tsc -w)",
    "build": "npm run build:pug; npm run build:tsc",
