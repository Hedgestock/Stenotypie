    "clean": "rm -rf out"
  },
  "devDependencies": {
    "@types/node": "^14.14.10",
    "@types/pug": "^2.0.4",
    "pug": "^3.0.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2"
  }
}
